{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/init.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Write|Edit|MultiEdit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "WORKTREE_MONITOR_MODE=pre bash ${CLAUDE_PLUGIN_ROOT}/hooks/check.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Write|Edit|MultiEdit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "WORKTREE_MONITOR_MODE=post bash ${CLAUDE_PLUGIN_ROOT}/hooks/check.sh",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
